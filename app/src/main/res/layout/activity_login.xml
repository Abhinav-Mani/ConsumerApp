<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/vegibasketmobile"
    android:gravity="center"
    tools:context=".Activities.LoginActivity">
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/recatngular_border"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />
            <EditText
                android:layout_below="@+id/name"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address" />

            <EditText
                android:layout_below="@+id/address"
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No" />

            <Button
                android:layout_below="@+id/phoneno"
                android:id="@+id/loginsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN" />

            <EditText
                android:layout_below="@+id/loginsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verficatioCode"
                android:hint="VerificationCode"
                />
            <Button
                android:layout_below="@+id/verficatioCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:id="@+id/verify"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>